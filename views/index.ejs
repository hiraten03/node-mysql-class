
<!DOCTYPE html>
<html>
<head>
  <title>タスク管理</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.5;
      padding: 20px;
    }

    form {
      margin-bottom: 20px;
    }

    input[type="text"], input[type="date"] {
      margin: 0 10px 10px 0;
    }

    ul {
      list-style: none;
      padding-left: 0;
    }

    li {
      background: #e0f7fa;
      margin-bottom: 5px;
      padding: 10px;
      border-radius: 5px;
    }

    #current-time {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <form id="task-form">
    <label>タスクの追加</label>
    <input required type="text" name="add" placeholder="何をする?" />
    <label>締め切り</label>
    <input type="date" name="deadline" required />
    <input type="submit" value="追加" />
  </form>
    <ul id="task-list">
    
  </ul>
  <p id="current-time"></p>
  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const currentTime = document.getElementById("current-time");
    const taskForm = document.getElementById("task-form");
    const taskList = document.getElementById("task-list");

    // 現在時刻表示
    function updateCurrentTime() {
      const now = new Date();
      currentTime.textContent = `現在時刻: ${now.toLocaleString()}`;
    }
    setInterval(updateCurrentTime, 1000);

    // 締め切りまでの日数を計算
    function calculateDaysLeft(deadline) {
      const today = new Date();
      const dueDate = new Date(deadline);
      const timeDiff = dueDate - today;
      const daysLeft = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));
      return daysLeft;
    }

    // タスク追加処理
    taskForm.addEventListener("submit", (e) => {
      e.preventDefault();

      const taskName = taskForm.elements["add"].value;
      const deadline = taskForm.elements["deadline"].value;

      const daysLeft = calculateDaysLeft(deadline);
      const taskItem = document.createElement("li");

      taskItem.textContent = `${taskName}（締め切り: ${deadline}、残り${daysLeft}日）`;
      taskList.appendChild(taskItem);

      taskForm.reset();
    });
  });
</script>
</body>
</html>
